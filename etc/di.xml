<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Amasty\RecurringPayments\Model\Config\ConfigurationValidator">
        <arguments>
            <argument name="methodValidators" xsi:type="array">
                <item name="terminal5" xsi:type="object">SDM\Altapay\Model\Config\ConfigurationValidator</item>
            </argument>
        </arguments>
    </type>
    <type name="Amasty\RecurringPayments\Model\SubscriptionManagement">
        <arguments>
            <argument name="subscriptionProcessors" xsi:type="array">
                <item name="terminal5.subscription_processors" xsi:type="object">
                    SDM\Altapay\Model\Subscription\Grid\Proxy
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Amasty\RecurringPayments\Model\Subscription\Scheduler\Handler\SubscriptionCharge">
        <arguments>
            <argument name="processors" xsi:type="array">
                <item name="terminal5" xsi:type="object">SDM\Altapay\Model\Processor\HandleSubscriptionCharge\Proxy
                </item>
            </argument>
        </arguments>
    </type>
    <preference for="Amasty\RecurringPayments\Model\Config" type="SDM\Altapay\Model\ConfigSys"/>
</config>